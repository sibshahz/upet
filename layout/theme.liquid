  <header class="w-full">
    <div class="announcement_bar">
      {% section 'announcement_bar' %}
    </div>
    <div class="header">
      {% section 'header' %}
    </div>
  </header>
  
  <main role="main w-full">
    {{ content_for_layout }}

    <div class="w-full clear-both">
      {% section 'main_hero' %}
    </div>

    <div class="w-full">
      {% section 'feature' %}
    </div>

    <div class="w-full">
      {% section 'hero_shot' %}
    </div>
  </main>

  <footer class="w-full">
    <div class="footer_section">
      {% section 'footer' %}
    </div>
  </footer>

